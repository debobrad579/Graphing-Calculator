<ArithmeticCalculator>
    canvas.before:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: output
            readonly: True
            text: "0"
            font_size: 64
            size_hint: (1, 0.3)
            cursor_color: (1, 1, 1, 0)
            background_normal: 'TextInputTop.png'
            background_active: 'TextInputTop.png'

        TextInput:
            id: answer_output
            readonly: True
            text: ""
            halign: "right"
            font_size: 64
